{
  "include": ["src/**/*", "plugins"],
  "exclude": ["**/node_modules", "**/__tests__/"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["types/*"],
      "@server": ["src/server/index.ts"],
      "@server/*": ["src/server/*"],
      "@client": ["src/client/index.ts"],
      "@client/*": ["src/client/*"],
      "@shared": ["src/shared/index.ts"],
      "@shared/*": ["src/shared/*"],
      "@/": ["./*"],
    },
    "outDir": "build",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "lib": ["es2017"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "pretty": true,
  },
}