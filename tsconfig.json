{
  "include": ["src/**/*", "plugins"],
  "exclude": ["**/node_modules", "**/__tests__/"],
  "compilerOptions": {
    "baseUrl": "",
    "paths": {
      "@server": ["./src/code/server/"],
      "@server/*": ["./src/code/server/*"],
      "@client": ["./src/code/client/"],
      "@client/*": ["./src/code/client/*"],
      "@shared": ["./src/code/shared/"],
      "@shared/*": ["./src/code/shared/*"],
      "@Types/*": ["./src/code/types/*"],
      "@/*": ["./*"]
    },
    "outDir": "build",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "lib": ["es2017"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "pretty": true
  },
}
